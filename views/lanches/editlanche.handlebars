{{#each erros}}
    <div class="alert alert-danger"> {{texto}} </div>
{{else}}

{{/each}}


<div class="mt-4 text-white card bg-primary">
    <div class="card-header bg-info ">
        <div class="row">
            <img src="/img/burger2.png" alt="" width="50" height="50" >
            <h2 style="margin-left: 10px;" class="mt-1">Editar Lanche</h2>
        </div>
    </div>
    <div class="card-body">
        <form method="POST" action="editLanche">
            <input type="hidden" name="id" value="{{lanche._id}}">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" for="nome">Nome do Lanche: </label>
                <div class="col-sm-10">
                    <input type="text" value="{{lanche.nome}}" id="nome" name="nome" class="form-control " required>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label mt-2" for="Tipo de Pao"> Tipo de Pão: </label>
                <div class="col-sm-10 mt-3">
                    {{#if tipoDePao}}
                        <div class="form-check form-check-inline">
                            <input checked class="form-check-input" required type="radio" name="tipoDePao" id="inlineRadio1" value="Pão Bola">
                            <label class="form-check-label" for="inlineRadio1">Pão Bola</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" required type="radio" name="tipoDePao" id="inlineRadio2" value="Pão Árabe">
                            <label class="form-check-label" for="inlineRadio2">Pão Árabe</label>
                        </div>
                    {{else}}
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" required type="radio" name="tipoDePao" id="inlineRadio1" value="Pão Bola">
                            <label class="form-check-label" for="inlineRadio1">Pão Bola</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input checked class="form-check-input" required type="radio" name="tipoDePao" id="inlineRadio2" value="Pão Árabe">
                            <label class="form-check-label" for="inlineRadio2">Pão Árabe</label>
                        </div>

                    {{/if}}
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" for="Ingredientes"> Ingredientes: </label>
                <div class="col-sm-10">
                     <textarea name="ingredientes" id="" class="form-control" cols="15" rows="5" required>{{lanche.ingredientes}}</textarea>  
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" for="Preço"> Preço em R$: </label>
                <div class="col-sm-10">
                    <input type="number" value="{{lanche.preco}}" step="0.01" min="0.01" name="preco" id="" class="form-control" required>
                </div>
            </div>
            <br>
            <div align="center">
                <button type="submit" class="btn btn-secondary"> Salvar Lanche </button>
                <a href="/lanches/pesquisa"><button type="button" class="btn btn-secondary"> Cancelar </button></a>
            </div>
        </form>
    </div>
</div>
