<div align="center">
    <div class="card-header text-white bg-info ">
        <div class="row">
            <img src="/img/order2.png" alt="" width="50" height="50">
            <h2 style="margin-left: 10px;" class="mt-1">Pedidos do dia </h2>
            <h2 class="mt-1" style="margin-left: 10px;" >- {{data_de_hoje}}</h2>
        </div>
    </div>
</div>
<div class="row">
    {{#each pedidos}}
        <div class="col-sm-4">
            <div class="text-white card mt-4 "
                {{#if status}}
                    style="background-color: green" 
                {{else}}
                    style="background-color: navy"

                {{/if}}
                >       
                
                <div class="card-body">
                    <div id="nomeCliente">
                        <div class="row">
                            <img src="/img/pedido.png" alt="" width="30" height="30">
                            <h5 style="margin-left: 10px;" class="mt-1"> Cliente: <b> {{cliente}} </b>  </h5>
                        </div>
                    </div>
                    <div class="mt-2" id="conteudoPedido">
                        {{#each descricao}}
                            <p>{{quantidade}} {{nomeLanche}} - {{tipoDePao}} - R$ {{subtotal}}  
                                {{#if observacoes}}
                                    <small>Observações: {{observacoes}}</small>
                                {{else}}
                                {{/if}}   
                            </p>
                            
                        {{else}}

                        {{/each}}

                        {{#each extra}}
                            <p> <u>Extra:</u>  {{extra}} - R${{valorExtra}}</p>
                        {{else}}

                        {{/each}}

                    </div>
                    <div class="bg-secondary" id="totalPedido">
                        <h5 class="mt-3"><b>Total: </b> R$ {{total}} </h5>
                    </div>

                    <div align="center" class="mt-4 row">
                        {{#if status}}
                            <form class="d-inline p-2" action="deletar" method="POST">
                                <input type="hidden" name="id" value="{{_id}}" id="">
                                <button style="margin-left: auto;" type="submit" alt="Excluir Pedido" class="btn btn-info"> <img src="/img/delete.png"  width="20" height="20">Excluir</button>
                            </form>
                        {{else}}
                            <form class="d-inline p-2" action="editar" method="POST">
                                <input type="hidden" name="id" value="{{_id}}" id="">
                                <button type="submit" alt="Editar Pedido" class="btn btn-info"> <img src="/img/pencil.png"   width="20" height="20">Editar</button>
                            </form>
                            <form class="d-inline p-2" action="deletar" method="POST">
                                <input type="hidden" name="id" value="{{_id}}" id="">
                                <button style="margin-left: auto;" type="submit" alt="Excluir Pedido" class="btn btn-info"> <img src="/img/delete.png"  width="20" height="20">Excluir</button>
                            </form>    
                            <form class="d-inline p-2" action="concluir" method="POST">
                                <input type="hidden" name="id" value="{{_id}}" id="" >
                                <button style="margin-left: auto;" type="submit" alt="Finalizar Pedido" class="btn btn-info"> <img src="/img/concluir.png" width="20" height="20">Concluir</button>
                            </form>    
                        {{/if}}  
                    </div>
                
                </div>
            </div>
        </div>
    {{else}}

    </div>
    <div align="center">
        <div class="mt-4 card-header text-white bg-primary">
                
                <h2> Não há nenhum pedido cadastrado na data de hoje</h2>
            
        </div>
    </div>
    {{/each}}
    
</div>

