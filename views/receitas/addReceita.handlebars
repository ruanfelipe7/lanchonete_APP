{{#each erros}}
    <div class="alert alert-danger"> {{texto}} </div>
{{else}}

{{/each}}


<div class="mt-4 text-white card bg-primary">
    <div class="card-header bg-info ">
        <div class="row">
            <img src="/img/dinheiro2.png" alt="" width="50" height="50" >
            <h2 style="margin-left: 10px;" class="mt-1">Nova Receita</h2>
        </div>
    </div>
    <div class="card-body">
        <form method="POST" action="novo">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" for="nome">Data da Receita: </label>
                <div class="col-sm-10">
                    <input type="date"  id="data" name="data" class="form-control " required>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" for="nome">Descrição: </label>
                <div class="col-sm-10">
                    <input type="text" id="descricao" name="descricao" class="form-control " required>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" for="Preço"> Valor em R$: </label>
                <div class="col-sm-10">
                    <input type="number" step="0.01" min="0.01" name="valor" id="" class="form-control" required>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" for="Preço"> Tipo da Receita: </label>
                <div class="col-sm-10">
                  <select class="form-control" name="tipoDeReceita" id="tipoDeReceita">
                    <option id="Lucro" value="1"> Lucro (+) </option>
                    <option id="Despesa" value="0"> Despesa (-) </option>       
                </select>
                </div>
            </div>
            
            <br>
            <div align="center">
                <button type="submit" class="btn btn-secondary"> Adicionar Receita </button>
                <button type="reset" class="btn btn-secondary"> Cancelar </button>
                
            </div>
        </form>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>

<script type="text/javascript">
    
    $(document).ready(function(){
        var hoje = new Date()
        var dia = hoje.getDate()
        var mes = hoje.getMonth()+1
        var ano = hoje.getFullYear()
        if(parseInt(dia) < 10){
            dia = "0"+dia
        }
        if(parseInt(mes) < 10){
            mes = "0"+mes
        }

        var datadeHoje = ano + "-" + mes + "-" + dia
        $("#data").val(datadeHoje)
        
        
    });
    
</script>
