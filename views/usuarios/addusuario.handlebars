    <div class="alert alert-danger"> {{texto}} </div>
{{else}}

{{/each}}

<div class="mt-4 text-white card bg-primary">
    <div class="card-header bg-info ">
        <div class="row">
            <img src="/img/usuarios2.png" alt="" width="50" height="50" >
            <h2 style="margin-left: 10px;" class="mt-1">Novo Usuário</h2>
        </div>
    </div>
    <div class="card-body">
        <form method="POST" action="novo">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" for="nome">Nome do Usuário: </label>
                <div class="col-sm-10">
                    <input type="text" id="nome" name="nome" class="form-control " required>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" for="nome">E-mail do Usuário: </label>
                <div class="col-sm-10">
                    <input type="email" id="email" name="email" class="form-control " required>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label mt-2" for="Tipo de Usuário"> Tipo de Usuário: </label>
                <div class="col-sm-10 mt-3">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" required type="radio" name="tipoDeUsuario" id="inlineRadio1" value="0">
                        <label class="form-check-label" for="inlineRadio1">Usuário Comum</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" required type="radio" name="tipoDeUsuario" id="inlineRadio2" value="1">
                        <label class="form-check-label" for="inlineRadio2">Usuário Administrador</label>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" for="nome">Login do Usuário: </label>
                <div class="col-sm-10">
                    <input type="text" id="login" name="login" class="form-control " required>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" for="nome">Senha do Usuário: </label>
                <div class="col-sm-10">
                    <input type="password" id="senha" name="senha" class="form-control " required>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" for="nome">Confirmar Senha: </label>
                <div class="col-sm-10">
                    <input type="password" id="senha2" name="senha2" class="form-control " required>
                </div>
            </div>
            <br>
            <div align="center">
                <button type="submit" class="btn btn-secondary"> Adicionar Usuário </button>
                <button type="reset" class="btn btn-secondary"> Cancelar </button>
            </div>
        </form>
    </div>
</div>
